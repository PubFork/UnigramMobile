<local:HostedPage
    x:Class="Unigram.Views.Settings.Password.SettingsPasswordDonePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Unigram.Views"
    xmlns:controls="using:Unigram.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <controls:WalkthroughControl
            HeaderSource="ms-appx:///Assets/Animations/TwoFactorSetupDone.tgs"
            Title="{CustomResource TwoStepVerificationPasswordSet}"
            Text="{CustomResource TwoStepVerificationPasswordSetInfo}"
            ButtonText="{CustomResource TwoStepVerificationPasswordReturnSettings}"
            ButtonCommand="{x:Bind ViewModel.SendCommand}"/>
    </Grid>
</local:HostedPage>
